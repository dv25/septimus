<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style TargetType="TextBlock">
		<Setter Property="FontFamily" Value="{StaticResource DefaultFontRegular}" />
		<Setter Property="FontSize" Value="20" />
		<Setter Property="TextWrapping" Value="WrapWholeWords" />
		<Setter Property="CharacterSpacing" Value="5" />
		<Setter Property="Foreground" Value="Red" />
		<Setter Property="IsTextSelectionEnabled" Value="True" />
	</Style>
	<Style x:Key="SmallTextBlock" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="{StaticResource DefaultFontRegular}" />
		<Setter Property="FontSize" Value="19" />
		<Setter Property="TextWrapping" Value="WrapWholeWords" />
		<Setter Property="Foreground" Value="{ThemeResource Foreground1}" />
		<Setter Property="IsTextSelectionEnabled" Value="True" />
	</Style>
	<Style x:Key="MediumTextBlock" TargetType="TextBlock">
