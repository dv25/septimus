<UserControl x:Class="UnoApp1.Views.AboutPage_Section02" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="ColumnDefinition1" />
			<ColumnDefinition x:Name="ColumnDefinition2" />
			<ColumnDefinition x:Name="ColumnDefinition3" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border x:Name="Content1" Padding="24,40" Background="{ThemeResource Background2}" CornerRadius="12">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Image Grid.Column="0" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Logo.png" />
				<TextBlock x:Uid="HGP542" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MediumMediumTextBlock}" />
			</Grid>
		</Border>
        <Border x:Name="Content2" Padding="24,40" Background="{ThemeResource Background2}" CornerRadius="12">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Image Grid.Column="0" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Logo.png" />
				<TextBlock x:Uid="IOP372" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MediumMediumTextBlock}" />
			</Grid>
		</Border>
        <Border x:Name="Content3" Padding="24,40" Background="{ThemeResource Background2}" CornerRadius="12">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Image Grid.Column="0" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Logo.png" />
				<TextBlock x:Uid="YPK891" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MediumMediumTextBlock}" />
			</Grid>
		</Border>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="ColumnDefinition1.Width" Value="*" />
						<Setter Target="ColumnDefinition2.Width" Value="*" />
						<Setter Target="ColumnDefinition3.Width" Value="0" />
						<Setter Target="Content1.(Grid.Column)" Value="0" />
						<Setter Target="Content2.(Grid.Column)" Value="1" />
						<Setter Target="Content3.(Grid.Column)" Value="0" />
						<Setter Target="Content3.(Grid.ColumnSpan)" Value="3" />
						<Setter Target="Content3.(Grid.Row)" Value="1" />
						<Setter Target="Content1.Margin" Value="0,0,0,0" />
						<Setter Target="Content2.Margin" Value="4,0,0,0" />
						<Setter Target="Content3.Margin" Value="0,4,0,0" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="499" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="ColumnDefinition1.Width" Value="*" />
						<Setter Target="ColumnDefinition2.Width" Value="*" />
						<Setter Target="ColumnDefinition3.Width" Value="*" />
						<Setter Target="Content1.(Grid.Column)" Value="0" />
						<Setter Target="Content2.(Grid.Column)" Value="1" />
						<Setter Target="Content3.(Grid.Column)" Value="2" />
						<Setter Target="Content3.(Grid.ColumnSpan)" Value="1" />
						<Setter Target="Content3.(Grid.Row)" Value="0" />
						<Setter Target="Content1.Margin" Value="0,0,0,0" />
						<Setter Target="Content2.Margin" Value="8,0,0,0" />
						<Setter Target="Content3.Margin" Value="8,0,0,0" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="1008" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="ColumnDefinition1.Width" Value="*" />
						<Setter Target="ColumnDefinition2.Width" Value="*" />
						<Setter Target="ColumnDefinition3.Width" Value="*" />
						<Setter Target="Content1.(Grid.Column)" Value="0" />
						<Setter Target="Content2.(Grid.Column)" Value="1" />
						<Setter Target="Content3.(Grid.Column)" Value="2" />
						<Setter Target="Content3.(Grid.ColumnSpan)" Value="1" />
						<Setter Target="Content3.(Grid.Row)" Value="0" />
						<Setter Target="Content1.Margin" Value="0,0,0,0" />
						<Setter Target="Content2.Margin" Value="32,0,0,0" />
						<Setter Target="Content3.Margin" Value="32,0,0,0" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</UserControl>
