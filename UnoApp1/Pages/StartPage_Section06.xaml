<UserControl x:Class="UnoApp1.Views.StartPage_Section06" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Vertical">
		<TextBlock x:Uid="DSW105" FontSize="40" HorizontalTextAlignment="Center" Style="{StaticResource MediumLarginoTextBlock}" Visibility="{x:Bind HeaderVisibility}" />
		<TextBlock x:Uid="FED189" Margin="0,24,0,0" Style="{StaticResource MediumTextBlock}" />
		<Grid Margin="0,32,0,0" Padding="24,16" Background="{ThemeResource Background3}" CornerRadius="12">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock x:Uid="CXI887" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource MediumTextBlock}" />
			<HyperlinkButton x:Name="Hyperlink" x:Uid="FEI998" NavigateUri="https://www.google.com" Style="{StaticResource MediumHyperlinkButton}" />
		</Grid>
		<Button x:Uid="JKL126" Margin="0,48,0,0" HorizontalAlignment="Center" Style="{StaticResource SolidButton}" Visibility="{x:Bind HeaderVisibility}" Click="Button_Click"/>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="Hyperlink.(Grid.Column)" Value="0" />
						<Setter Target="Hyperlink.(Grid.ColumnSpan)" Value="2" />
						<Setter Target="Hyperlink.(Grid.Row)" Value="1" />
						<Setter Target="Hyperlink.HorizontalAlignment" Value="Left" />
						<Setter Target="Hyperlink.Margin" Value="0,12,0,0" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="1008" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="Hyperlink.(Grid.Column)" Value="1" />
						<Setter Target="Hyperlink.(Grid.ColumnSpan)" Value="1" />
						<Setter Target="Hyperlink.(Grid.Row)" Value="0" />
						<Setter Target="Hyperlink.HorizontalAlignment" Value="Right" />
						<Setter Target="Hyperlink.Margin" Value="0,0,0,0" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</StackPanel>
</UserControl>
